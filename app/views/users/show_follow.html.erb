<% provide(:title,@title)%>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %><br/>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user), user  %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8 microposts-heading">
    <h3><%= @title %></h3>
      <% if @users.any? %>
        <ul class="users">
          <%= render @users %>
        </ul>
          <%= will_paginate %>
      <% end %>
  </div>
</div>
